<form action="/listings/{{listing._id}}/edit" method="POST" class="form-signin">
    <div class="text-center mb-4">
        <img class="mb-4" src="../assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
        <h1 class="h3 mb-3 font-weight-normal">Edit your listing</h1>
        <p>What do you need to edit?
        </p>
    </div>

    <div class="form-label-group">
        <input name="name" type="text" id="inputName" class="form-control" value="{{listing.name}}" autofocus>
        <label for="inputName">Name</label>
    </div>

    <div class="form-label-group">
        <select value="{{listing.listingType}}" name="listingType" class="custom-select d-block w-100 form-control"
            id="listing-type">
            <option>Offer</option>
            <option>Want</option>
        </select>
    </div>

    <div class="form-label-group">
        <select value={{listing.category}} name="category" class="custom-select d-block w-100 form-control"
            id="category">
        </select>
    </div>

    <div class="form-label-group">
        <select value={{listing.subCategory}} name="subCategory" class="custom-select d-block w-100 form-control"
            id="subCategory">
        </select>
    </div>

    <div class="form-label-group">
        <input name="description" type="text" id="inputDescription" class="form-control"
            value="{{listing.description}}">
        <label for="inputDescription">Description</label>
    </div>

    <div class="form-label-group" id="input-styling-address">

        <div id="map-example-container" class="d-none"></div>

        <input name="lat" type="text" id="input-lat" class="d-none">
        <input name="lng" type="text" id="input-lng" class="d-none">

        <input name="location" type="search" id="input-map" class="form-control" value={{listing.location}} />
        {{!-- <label for="input-map">Location</label> --}}


    </div>


    <div class="mb-3">
        <label>
            <span>Changed your mind? </span>
            <a href="/listings">Go back</a>
        </label>
    </div>

    <button class="btn btn-lg btn-primary btn-block" type="submit" {{> error this}} {{> success this}}>Edit!</button>
</form>

<form action="/listings/{{listing._id}}/delete" method="POST" class="form-signin">
    <div class="form-label-group">
        <button class="btn btn-lg btn-danger btn-block" type="submit">DELETE</button>
    </div>
</form>

<script src="/javascripts/dropdowns.js"></script>
<script src="/javascripts/autocomplete.js"></script>