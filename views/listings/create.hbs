<form action="/listings/add" method="POST" enctype="multipart/form-data" class="form-signin">
  <div class="text-center mb-4">
    <img class="mb-4" src="#" alt="" width="72" height="72">
    <h1 class="h3 mb-3 font-weight-normal">New listing</h1>
    <p>Create a new listing! What do you have to give away?
    </p>
  </div>

  <div class="form-label-group">
    <input name="name" type="text" id="inputName" class="form-control" placeholder="Name" required autofocus>
    <label for="inputName">Name</label>
  </div>

  <div class="form-label-group">
    <select name="listingType" class="custom-select d-block w-100 form-control" id="listing-type" required>
      <option selected="true" disabled>Choose Type</option>
      <option>Offer</option>
      <option>Want</option>
    </select>
  </div>

  <div class="checkbox input-group d-none" id="offerTrigger">
    <label class="text-info">
      <input type="checkbox" class="p-1 m-1"> I know already when people can come to pick-up this item.
    </label>
  </div>

  <div class="input-group d-flex flex-column justify-content-center">
    <div id="pickupTrigger" class="d-none my-2 py-2">
    <label for="pickup-date" class="text-info">
      <span class="mr-2"><i class="fa fa-calendar" aria-hidden="true"></i></span>
      Insert your ideal pick-up date:
      </label>
    <input type="date" id="pickup-date" name="pickupDate" class="form-control">
    </div>
  </div>

  <div class="input-group d-none mb-2 pb-2" id="autoDeleteLabelGroup">
    <label for="autoDeleteLabelGroup" class="text-info">Would you like to delete this item automatically after your pickup date?</label>
    <select name="autoDelete" class="custom-select d-block w-100 form-control" id="autoDelete">
      <option selected="true">No</option>
      <option>Yes</option>
    </select>
  </div>

  <div class="form-label-group">
    <select name="category" class="custom-select d-block w-100 form-control" id="category">
    </select>
  </div>
  <div class="form-label-group">
    <select name="subCategory" class="custom-select d-block w-100 form-control" id="subCategory">
    </select>
  </div>

  <div class="form-label-group">
    <input name="description" type="text" id="inputDescription" class="form-control" placeholder="Description" required>
    <label for="inputDescription">Description</label>
  </div>

  <div class="form-label-group" id="input-styling-address">

    <div id="map-example-container" class="d-none"></div>

    <input name="lat" type="text" id="input-lat" class="d-none">
    <input name="lng" type="text" id="input-lng" class="d-none">

    <input name="location" type="search" id="input-map" class="form-control" placeholder="Location" required/>
    {{!-- <label for="input-map">Location</label> --}}
  </div>

  <div class="form-label-group">
    <label class="custom-file-label" for="image-input">Upload image</label>
    <input type="file" class="form-control-file" name="image" id="image-input">
  </div>

  <div class="mb-3">
    <label>
      <span>Changed your mind? </span>
      <a href="/listings">Go back</a>
    </label>
  </div>

  <button class="btn btn-lg btn-primary btn-block" id="submit" type="submit" {{> error this}} {{> success this}}>Submit!</button>
  <div id="error" class="d-none"><p class="text-danger">Please select a date in the future</p></div>
</form>

<script src="/javascripts/schedule-date.js"></script>
<script src="/javascripts/dropdowns.js"></script>
<script src="/javascripts/autocomplete.js"></script>
